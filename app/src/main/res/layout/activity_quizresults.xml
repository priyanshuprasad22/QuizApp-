<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalbackground"
    tools:context=".quizresults">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:gravity="center"
        android:text="Score on completion"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correctanswer"
            android:text="Correct answer :  0"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incorrectanswer"
            android:text="Incorrect answer : 0"
           android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/startnextquiz"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/incorrectanswer"
            android:layout_marginTop="40dp"
            android:text="New Quiz" />
    </LinearLayout>



</RelativeLayout>